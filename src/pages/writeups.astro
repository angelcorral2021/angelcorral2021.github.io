---
import BaseLayout from '../layouts/BaseLayout.astro';
import WriteupCard from '../components/WriteupCard.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const writeups = await getCollection('writeups');
const posts = writeups.map(entry => ({
  ...entry.data,
  url: `/writeups/${entry.slug}`
})).sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---
<BaseLayout title="Writeups">
  <Header slot="header" />
  <nav class="mb-6 text-sm text-slate-400">
    <a href="/">Inicio</a> / <span>Writeups</span>
  </nav>
  <div class="max-w-4xl mx-auto px-6">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold bg-gradient-to-r from-accentBlue to-accentGreen text-transparent bg-clip-text">
        Writeups
      </h1>
      <p class="text-lg text-slate-300 mt-4 max-w-2xl mx-auto">
        Documentación detallada de máquinas y retos resueltos. Aprende sobre técnicas de hacking ético y metodologías de pentesting.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 gap-6">
      {posts.map(post => (
        <WriteupCard {...post} />
      ))}
    </div>

    {posts.length === 0 && (
      <div class="text-center py-12 text-slate-400">
        No hay writeups disponibles aún.
      </div>
    )}

    <div class="mt-12 text-center text-sm text-slate-400">
      Se encontraron {posts.length} writeups
    </div>
  </div>
  <Footer slot="footer" />
</BaseLayout>
