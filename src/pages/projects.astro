---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---
<BaseLayout title="Proyectos">
  <nav class="mb-6 text-sm text-slate-400">
    <a href="/">Inicio</a> / <span>Proyectos</span>
  </nav>
  <h1 class="text-4xl font-serif font-light tracking-wide bg-gradient-to-r from-white via-slate-200 to-slate-300 bg-clip-text text-transparent">Proyectos</h1>
  <div class="mt-6 grid sm:grid-cols-2 gap-6">
    {sortedProjects.map(project => (
      <a href={`/projects/${project.slug}`} class="block p-6 rounded-xl main-card hover:bg-slate-800 transition-colors duration-300">
        <h3 class="text-xl font-serif font-medium tracking-wide mb-2 text-slate-100">{project.data.title}</h3>
        <p class="text-slate-400 mb-4">{project.data.excerpt}</p>
        <div class="flex flex-wrap gap-2">
          {project.data.technologies?.map((tech: string) => (
            <span class="px-2 py-1 bg-slate-700 text-slate-300 rounded-full text-xs">
              {tech}
            </span>
          ))}
        </div>
      </a>
    ))}
  </div>
</BaseLayout>
