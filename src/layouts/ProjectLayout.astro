---
import "../styles/global.css";

import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
const { title, date, technologies } = frontmatter;

// Formato de fecha m√°s amigable
const formattedDate = new Date(date).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<BaseLayout title={title}>
    <article class="max-w-4xl mx-auto pt-8">
        <div class="mb-8">
                <h1 class="text-5xl font-light mb-4 tracking-tight font-serif bg-gradient-to-r from-white via-slate-200 to-slate-300 bg-clip-text text-transparent leading-snug">
                {title}
            </h1>
            <div class="flex items-center gap-4 text-slate-400 mb-6">
                <div class="flex items-center gap-2 text-slate-400">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <rect x="3" y="4" width="18" height="18" rx="2"></rect>
                        <path d="M16 2v4M8 2v4M3 10h18"></path>
                    </svg>
                    <span class="text-slate-400">{formattedDate}</span>
                </div>
            </div>
            {technologies && technologies.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-6">
                    {technologies.map((tech: string) => (
                        <span class="px-3 py-1 bg-slate-800 text-slate-300 rounded-full text-sm">
                            {tech}
                        </span>
                    ))}
                </div>
            )}
        </div>

        <div class="prose prose-invert max-w-none">
            <slot />
        </div>
    </article>
</BaseLayout>

<style>
    .prose {
        @apply text-slate-300;
    }
    .prose h2 {
           @apply text-2xl font-serif font-medium mt-8 mb-4 text-white tracking-wide;
    }
    .prose h3 {
           @apply text-xl font-serif font-medium mt-6 mb-3 text-white tracking-wide;
    }
    .prose p {
        @apply mb-4;
    }
    .prose code {
        @apply bg-slate-800 px-1 py-0.5 rounded text-slate-200;
    }
    .prose pre {
        @apply bg-slate-800 p-4 rounded-lg overflow-x-auto;
    }
    .prose pre code {
        @apply bg-transparent p-0;
    }
    .prose ul {
        @apply list-disc list-inside mb-4;
    }
    .prose ol {
        @apply list-decimal list-inside mb-4;
    }
    .prose a {
        @apply text-blue-400 hover:text-blue-300 transition-colors;
    }
</style>